<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.PurchaseReportBillDetailActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purchase Bill Report"
                    android:textColor="#fff"/>




        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:background="#E4E2E2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:background="#fff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">
                    <TextView
                        android:textScaleX=".9"
                        android:fontFamily="calibri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/customrname_bill"
                        android:textSize="18sp"
                        android:textColor="#000"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/bill_date"
                            android:textScaleX=".9"
                            android:fontFamily="calibri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12-02-2019"
                            android:textSize="16sp"
                            android:textColor="#000"/>
                        <TextView
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" | "/>
                        <TextView
                            android:fontFamily="calibri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sales"
                            android:textSize="16sp"
                            android:textColor="#000"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/bill_no_or_inoviceno"
                        android:fontFamily="calibri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Inv#365"
                        android:textSize="16sp"
                        android:textColor="#000"/>


                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textScaleX=".9"
                    android:textColor="#000"
                    android:fontFamily="calibri"
                    android:textSize="17sp"
                    android:text="ITEMS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <GridView android:id="@+id/gridviewsalehyeadsubbill"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center">

            </GridView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout
                android:background="#fff"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="17sp"
                    android:fontFamily="calibri"
                    android:text="Net Amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="17sp"
                        android:fontFamily="calibri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rs"
                        android:textColor="#000"/>
                    <TextView
                        android:textSize="17sp"
                        android:fontFamily="calibri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/netamount_bill"
                        android:textColor="#000"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#fff"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>